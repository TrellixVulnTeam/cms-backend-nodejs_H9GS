<div class="form">
<div class="container">
    <h2>Sửa Tài Khoản</h2>
    <form method="POST" action="/traditional/{{traditional._id}}?_method=PUT" enctype="application/json">
        <div class="wrapperform">
            <div class="box">
                <input type="text" name="title" required id="title" value="{{traditional.title}}">
                <label for="title">Tiêu Đề</label>
            </div>
               <div class="box">
                <input type="text" name="author" required id="author" value="{{traditional.author}}">
                <label for="author">Tác Giả</label>
             </div>
        </div>
        <div class="wrapperform">
         <div class="box">
              <select class="select" name="category" required> 
                  <option selected class="selected" value="toan">Chọn Thể Loại</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
              </select>
            </div>
        </div>
        <input type="submit" name="" value="Thêm Mới" class="dislodged-border">
    </form>
</div>
</div>