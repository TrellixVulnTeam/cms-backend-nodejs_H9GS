<div class="form">
<div class="container">
    <h2>Sửa Bài Viết</h2>
    <form method="POST" action="/story/{{story._id}}?_method=PUT" enctype="application/json">
        <div class="wrapperform">
            <div class="box">
                <input type="text" name="title" required id="title" value="{{story.title}}">
                <label for="title">Tiêu Đề</label>
            </div>
               <div class="box">
                <input type="text" name="author" required id="author" value="{{story.author}}">
                <label for="author">Tác Giả</label>
             </div>
        </div>
        <div class="wrapperform">
         <div class="box">
              <select class="select" name="category" required> 
                  <option selected class="selected" value="toan">Chọn Thể Loại</option>
                  <option value="toan">Minh Toàn</option>
                  <option value="toan">Minh Toàn</option>
                  <option value="toan">Minh Toàn</option>
                  <option value="toan">Minh Toàna</option>
                  <option value="toan">Minh Toàn</option>
                  <option value="toan">Minh Toàn</option>
                  <option value="toan">Minh Toàn</option>
              </select>
            </div>
        </div>
         <div class="wrapperform">
            <div class="box">
                <input type="date" value="{{storydate}}" name="date" id="date">
                <label for="title">Ngày Đăng</label>
             </div>
             <div class="box">
                <input class="form-control form-control-sm" name="images" type="file" value="{{story.images.data}}">
            </div>
        </div>  
           <div class="wrapperform textarea">
              <div class="box">
                 <textarea name="sumary" id="sumary" rows="10" cols="80" required>{{story.sumary}}</textarea>
                <label for="title">Tóm Tắt</label> 
            </div>
        </div>
        <div class="wrapperform textarea">
              <div class="box">
                <textarea name="content" id="content" rows="10" cols="80" required>{{story.content}}</textarea>
                <label for="title">Nội Dung</label>
            </div>
        </div>
        <input type="submit" name="" value="Thêm Mới" class="dislodged-border">
    </form>
</div>
</div>