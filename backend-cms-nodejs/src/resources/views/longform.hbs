<div id="modal">
  <!-- Button trigger modal -->
  <a class="btn btn-primary" href="longform/create" >
    Thêm mới
  </a>
</div>
<div class="content">
  <div class="row">
      <div class="col-md-12">
          <div class="card card-plain">
              <div class="card-header">
                  Danh sách Tin Tức LongForm
              </div>
              <div class="card-body">
                <table class="table table-responsive-xxl">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Tiêu Đề</th>
                      <th>Thể Loại</th>
                       <th>Tác Giả</th>
                      <th>Trạng Thái</th>
                      <th>Thao tác</th>
                    </tr>
                  </thead>
                  <tbody >
                    {{#each longform}}
                    <tr>
                      <td>ID</td>
                      <td>{{title}}</td>
                      <td>{{category}}</td>
                      <td>{{author}}</td>
                      <td>{{status}}</td>
                      <td>
                        <a class="btn btn-primary" type="button" href="longform/{{this._id}}/edit">
                          Sửa
                        </a>
                        <a class="btn btn-danger" type="button" data-id="{{this._id}}" data-target="#delete-course-modal" data-toggle="modal">
                          Xoá
                        </a>
                      </td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
          </div>
      </div>
  </div>
</div>
<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal" id="delete-course-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="btn-delete-course">Xóa Bài</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>
<form name="delete-new-form" method="POST"></form>
<script>
    document.addEventListener('DOMContentLoaded',function() {
     var newId;
     var btnDeleteNew = document.getElementById("btn-delete-course");
     var deleteForm = document.forms['delete-new-form'];
     $('#delete-course-modal').on('show.bs.modal',function (event) {
       button = $(event.relatedTarget);
       newId = button.data('id');
    });
    
    btnDeleteNew.onclick = function() {
      deleteForm.action = '/longform/' + newId + '?_method=DELETE';
      deleteForm.submit();
    }

  });
</script>